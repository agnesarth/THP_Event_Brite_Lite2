              <div class="form-group ">
                <div class="row justify-content-center">
                  <div class="col-12">
                    <%= f.submit "Delete", class: "col-12 btn btn-primary mr-1 mb-1", data: { confirm: "Are you sure ?" } %>
                  </div>
                </div>
              </div>
              <hr>
              <div class="text-center">
                <div class="col-12 float-sm-left text-center pt-2 mb-2">
                <%= link_to "Back", :back , class: "card-link"%>
                </div>
                <%= render "devise/shared/links" %>
              </div>
            <% end %>       
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
